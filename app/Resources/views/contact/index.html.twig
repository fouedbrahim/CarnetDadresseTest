{% extends 'base.html.twig' %}
{% block title %}ben brahim foued{% endblock %}

{% block body %}
    <h1>Mes Contacts</h1>
   <a href="{{ path('contact_new')}}" class="btn btn-primary">Ajouter un contact</a>
  
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Adresse</th>
                <th>Téléphone</th>
                <th>Site Web</th>
                
                <th>gerer mon contact</th>
            </tr>
        </thead>
        <tbody>
        {% set i = 0 %}
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.lasteName }}</td>
                <td>{{ contact.fisrtName }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.adress }}</td>
                <td>{{ contact.phone }}</td>
                <td>{{ contact.website }}</td>
                
                <td>
                    <a href="{{ path('contact_show', { 'id': contact.id }) }}" class="btn btn-primary">Afficher</a>
                    <a href="{{ path('contact_edit', { 'id': contact.id }) }}" class="btn btn-primary">Modifier</a>
                    <a href="{{ path('contact_show', { 'id': contact.id }) }}" class="btn btn-primary">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
